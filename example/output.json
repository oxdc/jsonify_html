{
    "title": {
        "$type": "str",
        "$cmd": [
            ["select_one", "x", "//title/text()"],
            ["run", "eval", "$root.lower()"]
        ]
    },
    "description": {
        "$type": "str",
        "$cmd": [
            ["select_one", "x", "//meta[@name='description']/@content"]
        ]
    },
    "posts": {
        "$type": "list",
        "$cmd": [
            ["select", "css", ".post-item"],
            ["foreach", "$include(post)"]
        ]
    }
}